<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/infoRootLayout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPhotographerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_horizontal_margin"
        android:layout_marginTop="@dimen/dimen_horizontal_margin"
        android:layout_marginRight="@dimen/dimen_horizontal_margin"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Justin Groep" />

</android.support.constraint.ConstraintLayout>